    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'retypd-rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=retypd-rust",
                    "--package=retypd-rust"
                ],
                "filter": {
                    "name": "retypd-rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
                // "DEBUG_TRANS_INIT_GRAPH": "initial.dot",
                "DEBUG_TRANS_SAT_GRAPH": "sated.dot"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'retypd-rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=retypd-rust",
                    "--package=retypd-rust"
                ],
                "filter": {
                    "name": "retypd-rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}